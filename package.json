{
  "name": "firefuncs",
  "version": "1.0.0-alpha-2",
  "description": "Create Firebase Cloud Functions from functions marked with decorators",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "publish-public": "npm publish --access public",
    "test": "jest --config jest.config.js",
    "version": "npm run format && git add -A src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chieze-Franklin/firefuncs.git"
  },
  "keywords": [
    "firebase",
    "cloud",
    "functions"
  ],
  "author": "Franklin Chieze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Chieze-Franklin/firefuncs/issues"
  },
  "homepage": "https://github.com/Chieze-Franklin/firefuncs#readme",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/glob": "^7.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.2.0",
    "glob": "^7.1.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.5.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  }
}
